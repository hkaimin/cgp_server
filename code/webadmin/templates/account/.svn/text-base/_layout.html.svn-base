{% extends 'admin/master.html' %}
{% from '_macro/sidebar.html' import menuitem %}


{% block wrap %}

<div id="wrap" class="container-fluid">

    <div class="row-fluid">

        <div class="span2" id="sidebar">

            <div class="sidebar-nav">
                <div class="nav-title">账户设置</div>

                <ul class="nav nav-list">
                    {{ menuitem('account.permission_view', '我的权限') }}
                    {{ menuitem('account.password_view', '修改密码') }}
                </ul>

            </div>

        </div>

        <div id="main" class="span10">

            {% block main_title %}
                <div class="title">{{ admin_view.name }}</div>
            {% endblock %}

            {% block main_content %}

                请从左边选择操作

            {% endblock %}
        </div>

    </div>

</div>

{% endblock %}

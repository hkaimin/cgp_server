{% macro render_input(name) %}

<div class="datetimepicker input-append date">
    <input id="{{ name }}" class="input-small" data-format="yyyy-MM-dd" type="text"
           name="{{ name }}" value="">
    <span class="add-on">
        <i data-date-icon="fa fa-calendar"></i>
    </span>
</div>

{% endmacro %}

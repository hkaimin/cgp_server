{% extends 'ctr.html' %}


{% block main_content %}

{% include('_include/message.html') %}

<p>以下是当前系统定义的权限列表</p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th class="span3">名称</th>
            <th>标题</th>
            <th>描述</th>
        </tr>
    </thead>
    <tbody>
    {% for name, title, desc in permissions %}
        <tr>
            <td>{{ name }}</td>
            <td>{{ title }}</td>
            <td>{{ desc }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
